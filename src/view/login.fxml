<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="12" BorderPane.alignment="CENTER">
            <Label text="Accedi al sistema" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="emailField" promptText="Email" prefWidth="240" />
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="240" />
            
            <Button text="Login" onAction="#handleLogin" prefWidth="240" />
            <Button text="Esci" onAction="#handleEsci" prefWidth="100"/>
            <Label fx:id="errorLabel" textFill="red" visible="false" />
            
        </VBox>
    </center>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
</BorderPane>
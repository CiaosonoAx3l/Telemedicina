<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.DiabetologoController"
            prefWidth="700.0" prefHeight="500.0">
    <children>
        <VBox spacing="20" alignment="TOP_CENTER" layoutX="50" layoutY="30" prefWidth="600">
            <children>
                <Label fx:id="benvenutoLabel" text="Benvenuto, Diabetologo!" style="-fx-font-size: 18px;" />
                
                <Button text="Visualizza Pazienti Associati" onAction="#handleVisualizzaPazienti" prefWidth="300"/>
                <Button text="Visualizza Notifiche" onAction="#handleVisualizzaAlert" prefWidth="300"/>
                <Button text="Esci" onAction="#handleEsci" prefWidth="300"/>
            </children>
            <padding>
                <Insets top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
